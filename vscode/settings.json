{
  "vim.normalModeKeyBindings": [
    {
      "before": ["<tab>"],
      "after": ["g", "t"]
    },
    {
      "before": ["<S-tab>"],
      "after": ["g", "T"]
    },
    {
      "before": ["K"],
      "after": ["g", "h"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      "before": ["g", "l"],
      "commands": ["editor.action.revealDefinitionAside"]
    },
    // Git
    {
      "before": ["<leader>", "s", "c"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["g", "o", "c"],
      "commands": ["git.openChange"]
    },
    {
      "before": ["g", "o", "f"],
      "commands": ["git.openFile"]
    },
    {
      "before": ["g", "C"],
      "commands": ["git.checkout"]
    },
    {
      "before": ["g", "s"],
      "commands": ["git.stage"]
    },
    {
      "before": ["g", "u"],
      "commands": ["git.unstage"]
    },
    {
      "before": ["leader", "g", "p"],
      "commands": ["git.push"]
    },
    // Debug
    {
      "before": ["<Leader>", "d", "c"],
      "commands": ["workbench.action.debug.continue"]
    },
    {
      "before": ["<Leader>", "d", "i"],
      "commands": ["workbench.action.debug.stepInto"]
    },
    {
      "before": ["<Leader>", "d", "u"],
      "commands": ["workbench.action.debug.stepOut"]
    },
    {
      "before": ["<Leader>", "d", "o"],
      "commands": ["workbench.action.debug.stepOver"]
    },
    {
      "before": ["<Leader>", "d", "b"],
      "commands": ["editor.debug.action.toggleBreakpoint"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "s", "v"],
      "commands": [":vsplit"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    }
  ],
  // cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",

  // title bar
  "window.title": "${activeFolderMedium}${separator}î‚  ${activeRepositoryBranchName}",

  // editor
  "editor.stickyScroll.enabled": true,
  "editor.wordWrap": "on",
  "editor.linkedEditing": true,

  // top bar
  "breadcrumbs.enabled": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.sideBar.location": "right",

  // Custom styles
  "custom-ui-style.font.sansSerif": "JetBrains Mono, Monaco",
  "custom-ui-style.electron": {},

  "vim.leader": "<space>",
  "workbench.iconTheme": "moxer-icons",
  "files.autoSave": "afterDelay",
  "editor.fontSize": 14,
  "editor.fontFamily": "JetBrains Mono, Monaco, 'Courier New', monospace",
  "editor.lineHeight": 1.42857, // makes font size 14 have line height of ~20px

  "cursor.cpp.enablePartialAccepts": true,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "search.mode": "newEditor",
  "search.searchEditor.reusePriorSearchConfiguration": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "workbench.editor.enablePreview": false,

  "terminal.integrated.fontSize": 14,
  "editor.semanticHighlighting.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "cursor.cpp.disabledLanguages": ["markdown"],
  "workbench.productIconTheme": "icons-carbon",
  "window.autoDetectColorScheme": true,
  "workbench.statusBar.visible": false,
  "workbench.preferredDarkColorTheme": "Cursor Dark Midnight",
  "semanticdiff.defaultDiffViewer": true
}
